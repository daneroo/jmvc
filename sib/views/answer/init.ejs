<h2>answers</h2>
<table cellspacing='0px'>
	<thead>
	<tr>
		<% for(var attr in Sib.Models.Answer.attributes){%>
			<% if(attr == 'id') continue;%>
			<th><%= attr%> </th>	 
		<%}%>
		<th>Options</th>
	</tr>
	</thead>
	<tbody>
		<%= $.View('//sib/views/answer/list',{answers: answers})%>
	</tbody>
</table>
<h2>New answer</h2>
<form>
	<% for(var attr in Sib.Models.Answer.attributes){ %>
		<% if(attr == 'id') continue;%>
		<div>
			<label><%= attr %> </label><br />
			<input type="text" value="" name="<%= attr %>"/>
		</div>
	<%}%>
	<input type='submit' value='Create'/>
</form>